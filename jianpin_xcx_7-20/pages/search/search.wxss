/* pages/search/search.wxss */

/*引入ICONFONT*/
@import "../../style/iconfont/iconfont.wxss";
page{
  padding-top: 38px;
}
.search{
  width: 100vw;
  box-sizing: border-box;
  background-color: #fff;
  position: fixed;
  top: 0;
  border-bottom: #eee 1px solid;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 16rpx 20rpx;
  z-index: 999;
}
.search_left,.search_right{
  display: inline-block;
}
.search .search_icon{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 16px;
  padding-left: 16rpx;
  color: #b2b2b2;
}

.search .search_clear{
  position: absolute;
  right: 0;
  top: 0;
  z-index: 9;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 16px;
  padding-right: 16rpx;
  color: #b2b2b2;
}

.search .search_left{
  position: relative;
}

.search .search_input{
  width: 590rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  padding-left: 60rpx;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 13px;
  border-radius: 25px;
}
.search .search_right .search_btn{
  font-size: 12px;
  width: 100rpx;
  box-sizing: border-box;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 4px;
}
.search .search_right .start{
  background-color: #ff4965;
  border: 1px solid #ff4965;
  color: #fff;
}
.search .search_right .cancel{
  background-color: #f8f8f8;
  border: 1px solid #dddddd;
  color: #333333;
}
.history{
  width: 100vw;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.history .history_title{
  position: relative;
  width: 100vw;
  font-size: 13px;
  padding-bottom: 30rpx;
  color: #333333;
}
.history .clear{
  position: absolute;
  top: 0;
  right: 0;
  color: #ff4965;
  font-size: 12px;
}
.history .item{
  background-color: #f5f5f5;
  color: #333333;
  font-size: 12px;
  padding: 6rpx 22rpx;
  border-radius: 4px;
  margin-right: 16rpx;
}
.result{
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  color: #353535;
  background-color: #fff;
  padding: 20rpx;
}
.result .result_item{
  position: relative;
  overflow: hidden;
  margin-bottom: 10rpx;
  border: 1px solid #f5f5f5;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  border-radius: 3px;
}
.result .goods_item{
  padding: 15px 30rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  overflow: hidden
}

.result .goods_item>navigator{
  width: 100%;
}

.result .goods_item .goods_left,.result .goods_item .goods_left image{
  width: 200rpx;
  height: 200rpx;
}
.result .goods_item .goods_left{
  margin-right: 10rpx;
}
.result .goods_item .goods_right{
  width: 490rpx;
  display: flex;
  flex-direction: column;
}
.result .goods_item .goods_right .goods_name{
  font-size: 12pt;
}
.result .goods_item .goods_right .goods_store{
  font-size: 11pt;
  color: #999;
}
.result .goods_item .goods_right .goods_price_box{
  margin-top: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 32px;
}
.result .goods_item .goods_right .goods_price_box .goods_price{
  color: #ff4965;
}
.result .goods_item .goods_right .goods_price_box .goods_buy_btn{
  text-align: center;
  background-color: #ff4965;
  height: 32px;
  width: 32px;
  border-radius: 50%;
  box-shadow:-10px 0 10px transparent,10px 0 10px transparent, 0 -10px 10px transparent, 0 2px 5px rgba(255, 72, 145, 0.6);
  color: #fff;
}
.empty{
  padding-top: 36rpx;
  text-align: center;
  color: #666;
  font-size: 15px;
}