/* pages/cate/cate.wxss */
@import "../../style/utils/search.wxss";
@import "../../style/iconfont/iconfont.wxss";

page {
  height: 100%;
}

.search {
  background: #f8f8f8;
  padding: 20rpx 40rpx;
  height: 9vh;
  box-sizing: border-box;
  border-bottom: 1px solid #e6e6e6;
}

page .sider_bar {
  position: fixed;
  top: 9vh;
  width: 150rpx;
  height: 91vh;
  background-color: #f8f8f8;
}

page .sider_bar scroll-view {
  height: 100%;
  border-right: 1px solid #f2f2f2;
}

page .sider_bar .cate_item {
  position: relative;
  height: 150rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 12px;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #f8f8f8;
}

page .sider_bar .cate_item .cate_title{
  height: 150rpx;
  width: 100%;
  line-height: 150rpx;
}

page .sider_bar .active {
  background-color: #fff;
  color: #ff4965;
}

.content_box{
  position: fixed;
  top: 9vh;
  left: 150rpx;
  width: 600rpx;
  height: 91vh
}
.content_box scroll-view{
  height: 91vh;
  padding-bottom: 100rpx;
}

.content_box .goods_item{
  width: 33.333%;
  padding: 20rpx 0;
  text-align: center;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  float: left;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  max-height: 330rpx;
  height: 330rpx;
}

.content_box .goods_item .goods_item_img{
  width: 140rpx;
  height: 140rpx;
}

.content_box .goods_item .goods_item_name{
  font-size: 14px;
  line-height: 14px;
}
.content_box .goods_item .goods_desc{
text-overflow: ellipsis;
overflow : hidden;
display: -webkit-box;
-webkit-line-clamp: 3;
-webkit-box-orient: vertical;
}