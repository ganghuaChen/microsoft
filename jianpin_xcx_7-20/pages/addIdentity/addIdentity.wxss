/* pages/identity/identity.wxss */
@import '../../style/iconfont/iconfont.wxss';
page{
  background-color: #f5f5f5;
  padding-bottom: 80rpx;
}
.wrapper{
  font-size: 14px;
}
.wrapper .identity_blank{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
}
.wrapper .identity_input{
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}
.wrapper .identity_box{
  padding: 20rpx;
  background-color: #fff;
}
.wrapper .identity_box .identity_tips{
  color: #999;
}
.wrapper .identity_box .iconfont{
  margin-right: 20rpx;
}
.wrapper .identity_img_box{
  padding: 20rpx 20rpx 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #fff;
}
.wrapper .identity_img_box .identity_img{
  border: 2px dashed #eee;
  height: 212rpx;
  width:335rpx;
  position: relative;
}
.wrapper .identity_img_box .identity_img  .front_tips,.wrapper .identity_img_box .identity_img  .back_tips{
  position: absolute;
  width: 335rpx;
  text-align: center;
  right: 0;
  bottom: 0;
  z-index: 2;
  transform: translateY(150%);
}
.wrapper .identity_img_box .identity_img image{
  height: 212rpx;
  width:335rpx;
}
.wrapper .identity_img_box .identity_img .add{
  line-height: 212rpx;
  text-align: center
}
.wrapper .identity_img_box .identity_img .add .iconfont{
  font-size: 50px;
  color: #eee;
}
.wrapper .identity_img_box .identity_img .close_btn{
  position: absolute;
  right: 0;
  top: 0;
  z-index: 2;
  transform: translateX(50%) translateY(-50%);
  height: 40rpx;
  width: 40rpx;
  line-height: 18px;
  box-sizing: border-box;
  border-radius: 50%;
  background-color: #f43530;
  text-align: center;
  color: #fff;
  font-size: 20px;
}
.wrapper .foot_tips{
  padding: 30rpx;
}
.wrapper .foot_tips .tips_title{
  text-align: center;
  font-size: 15px;
  margin-bottom: 10rpx;
}
.wrapper .foot_tips .section{
  color: #666;
  text-indent: 14px;
  position: relative;
}
.wrapper .foot_tips .section::after{
  content: 'Â·';
  position: absolute;
  left: 0;
  top: 0;
  transform: translateX(-50%);
}
.update{
  position: fixed;
  z-index: 999;
  width: 100vw;
  bottom: 0;
  left: 0;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 18px;
  text-align: center;
  color: #fff;
  background-color: #ff4965;
}